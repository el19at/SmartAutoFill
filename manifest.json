{
  "manifest_version": 2,
  "name": "Smart AutoFill",
  "version": "1.0.0",
  "description": "Automatically fill forms based on saved rules.",
  "author": "el19at",
  "icons": {
    "48": "icons/autoSaveIcon48.png",
    "128": "icons/autoSaveIcon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
