{
  "manifest_version": 2,
  "name": "Smart AutoFill",
  "version": "2.0",
  "description": "Auto-save and auto-fill forms with user-defined rules.",
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
